@model IEnumerable<Bastion.Models.Reaper.Account>

<table class="table table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th>
            Instances
        </th>
        <th>
            CPUs
        </th>
        <th>
            Ram
        </th>
        <th>
            Disk
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usage.Compute.Instances)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usage.Compute.VCPUs)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usage.Compute.Ram)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usage.Compute.Disk)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id=item.Id }) 
            </td>
        </tr>
    }

</table>
